	document.formB1_5.cod_coltu.value = tr.getElement('select[name=cod_coltu_arbu]').value ;
	document.formB1_5.cod_coltu_old.value = cod ;
	if( !confirm("Vuoi modificare questa specie nella composizione dello strato arbustivo?"+cod)) e.stop() ;
	else document.formB1_5.submit();
}
