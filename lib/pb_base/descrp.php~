<?php
function tabella ($conn){
?>
    <TABLE BORDER=1 align=center>
      <TR>
	<TD>
	  <form name='particelle' action="?page=descrp" method="post">
	    <TABLE BORDER=0>
	      <tbody align="center">

		<tr>
		  <TD style="padding:10px;">
		    Bosco
		  </TD>
		  <TD colspan="5" width=100 style="padding:10px;">
		    <select name="codice" onChange='javascript:particelle.submit();'>
		      <?
		      $codici = getCodiciBoschi() ;
		      foreach( $codici as $codice ) {
			      $selected = ( isset($_POST['codice']) and $_POST['codice'] == $codice->codice )? 'selected' : '' ;
			?>
			<option value="<?echo "$codice->codice"?>" <?=$selected?>><?echo "$codice->codice $codice->descrizion"?></option>
			  <?
			}
			//tabella_part($conn, $_request['codice']); //inserisco il secondo menÃ¹ a tendina delle particelle del codice selezionato dall'utente
		      ?> 
		    </select>

		<tr>
		  <TD style="padding:10px;">
		    Particella
		  </TD>
		  <td style="padding:10px;">
<?php
		  $disabled = ( !isset($_POST['codice']) ) ? 'disabled' : '' ;
		  $codice = ( isset($_POST['codice']) ) ? $_POST['codice'] : -1 ;
		  
		  echo "<select $disabled><option>particella...</option>" ;
		  $particelle = getCodiciPart( $codice ) ;
		  foreach( $particelle as $particella ) {
			echo "<option value='".$particella->cod_part."'>".$codice."  ".$particella->cod_part."</option>" ;
		  echo "</select>" ;
?>
		  </td>
		</tr>
<?php
table_schede ();
?>
		  </td>
		</tr>
	      </tbody>
	    </TABLE>
	  </form>
<?php
} //chiuso la fct table
?>   
  		
