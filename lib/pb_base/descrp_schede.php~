<?php
function tabella1 ($conn, $codice){
?>
    <TABLE BORDER=1 align=center> <!--tabella serve solo per fare bordo nero esterno-->
      <TR>
	<TD>
  <TABLE BORDER=0 align=center >
    <tbody align="center">
    <tr>
      <td colspan="6" width=100 align="left">
	<TABLE BORDER=0 bordercolor="green">	
	    <tbody align="center">
	      <tr>
		<TD style="padding:10px;">
		  Bosco
		</TD>
		<TD style="padding:10px;">
		  <?php
		  $query = pg_Exec($conn,"select descrizion from PROPRIET where codice='$codice';");
		  $descrizion=pg_fetch_object($query)
		  ?>
		  <?php echo "$codice $descrizion->descrizion"?>
		</td>
	      </tr>
	      <?php 
		tabella_part($conn, $codice); //inserisco il secondo menÃ¹ a tendina delle particelle del codice selezionato dall'utente
	      ?> 
	    </tbody>
	</TABLE>
	<?php 
	table_schede ($conn);
	?> 
      </TD>
    </TR>
    </tbody>
  </TABLE>
      </TD> <!--chiudo la tabella nera attorno-->
    </TR>
  </TABLE>
<?php
} //chiuso la fct table
?>   

<?php
function tabella_part ($conn, $codice1) {
?>
  <tr>
    <td style="padding:10px;">
      Particella
    </td>
    <td colspan="5" width=100 style="padding:10px;">
      <form action="schede.php" method="get">
	<select name="cod_part1">
	  <?
	      $query1 = pg_Exec($conn,"select cod_part from PARTCOMP where proprieta='$codice1';");
	      $riga = 0;
	      while($row1 = pg_fetch_object($query1,$riga)){
	    ?>
	    <option value="<?echo "$row1->cod_part"?>"><?echo "$row1->cod_part"?></option>
	    <?
	      $riga++;
	      }
	    ?>
  <!--Inserisco un input nascosto che mi serve per passare la variabile 'codice1' alla pagina schede.php-->
	</select>
      </form>
    </td> 
    <Td>
      <form action="schede.php" method="get">
	<input type=hidden name=codice1 value="<?echo "$codice1"?>">

      </form>
    </td> 
  </tr>
<?php
} //chiuso la fct tabella_part

?>  		
